public class Solution {  

 	public static void bubbleSort(int[] arr){
        
		int round=0;
       while(round<arr.length){
            for(int i=0;i<arr.length-1;i++){
                for(int j=i+1;j<i+2;j++){
                if(arr[i]>arr[j]){
                    int temp=arr[i];
                    arr[i]=arr[j];
                    arr[j]=temp;
                }
            
                }    
            }
        round++;
        }
	}
}
