public class Solution {

	public static boolean checkPalindrome(String str){
        int i=0;
        int k=str.length();
        int j=k-1;
        int l=k/2;
        while(i<l&&j>=l)
         {
            if(str.charAt(i)==str.charAt(j))
               {
                   i++;
                   j--;
              }
            else
            {
                return false;
            }
            
        }
        return true;
	}
    
}
